{% extends 'base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block body %}
    <h1>Owner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Password</th>
                <th>Id_contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.firstname }}</td>
                <td>{{ owner.lastname }}</td>
                <td>{{ owner.telephone }}</td>
                <td>{{ owner.email }}</td>
                <td>{{ owner.password }}</td>
                <td>{{ owner.idContact }}</td>
                <td>
                    <a href="{{ path('app_owner_show', {'id': owner.id}) }}">show</a>
                    <a href="{{ path('app_owner_edit', {'id': owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_new') }}">Create new</a>
{% endblock %}
